<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ElectricPlayer.Player.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ElectricPlayer.Player.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ElectricPlayer.Player">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Panel>
        <Image Source="{Binding Cover}"></Image>
        <Button Command="{Binding OnClickCommand}" Content="Play"></Button>
        <Button Command="{Binding OnNextSong}" Content="Next" Margin="0 80 0 0"></Button>
        <Button Click="Button_OnClick" Content="Add to playlist" Margin="0 0 0 80"></Button>
        <Button Command="{Binding OnSaveToJson}" Content="Save to json" Margin="0 0 0 160"></Button>
        <Label Content="{Binding Title}"></Label>
    </Panel>

</Window>