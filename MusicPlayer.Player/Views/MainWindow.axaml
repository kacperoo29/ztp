<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MusicPlayer.Player.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MusicPlayer.Player.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="MusicPlayer.Player">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Panel>
        <!-- Try somehow displaying artwork -->
        <Image Source="{Binding Cover}"></Image>
        <Button Command="{Binding OnClickCommand}" Content="Play"></Button>
        
    </Panel>

</Window>
